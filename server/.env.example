# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Weather API Configuration
WEATHER_API_KEY=your_weather_api_key_here

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/terralink

# JWT Configuration
JWT_SECRET=your_jwt_secret_here

# LLM Temperature Configuration
# Override default temperatures for different task types
# Values should be between 0.0 and 2.0 (OpenAI limit)

# Factual tasks (very deterministic)
AI_TEMPERATURE_FACTUAL=0.1

# Analytical tasks (low creativity)
AI_TEMPERATURE_ANALYTICAL=0.2

# Prediction tasks (balanced determinism/creativity)
AI_TEMPERATURE_PREDICTION=0.3

# Recommendation tasks (balanced)
AI_TEMPERATURE_RECOMMENDATION=0.4

# Classification tasks (consistent results)
AI_TEMPERATURE_CLASSIFICATION=0.2

# Creative tasks (higher creativity)
AI_TEMPERATURE_CREATIVE=0.8

# Chat/conversational tasks
AI_TEMPERATURE_CHAT=0.7

# Brainstorming/ideation tasks (maximum creativity)
AI_TEMPERATURE_BRAINSTORMING=1.0
